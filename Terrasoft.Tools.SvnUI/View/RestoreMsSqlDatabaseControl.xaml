<UserControl x:Class="Terrasoft.Tools.SvnUI.View.RestoreMsSqlDatabaseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Terrasoft.Tools.SvnUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel DataContext="{Binding Path=RestoreMsSqlDatabase, Source={StaticResource Locator}}">
        <local:SelectFilePathFromTypeControl FilePathType="{Binding BackupFilePathType}" LocalPath="{Binding BackupLocalPath}"
                                             FtpFilePath="{Binding BackupFtpPath}" FtpLogin="{Binding FtpLogin}" FtpPassword="{Binding FtpPassword}"
                                             FtpTempFile="{Binding FtpTempFile}"/>
        <StackPanel>
            <local:StringPropertyControl Property="{Binding ServerName}"></local:StringPropertyControl>
            <local:StringPropertyControl Property="{Binding UserLogin}"></local:StringPropertyControl>
            <local:PasswordPropertyControl Property="{Binding UserPassword}"></local:PasswordPropertyControl>
            <local:StringPropertyControl Property="{Binding DatabaseName}"></local:StringPropertyControl>
        </StackPanel>
    </StackPanel>
</UserControl>
