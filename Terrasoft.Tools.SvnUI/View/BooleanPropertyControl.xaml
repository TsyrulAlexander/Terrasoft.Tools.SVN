<UserControl x:Class="Terrasoft.Tools.SvnUI.View.BooleanPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Terrasoft.Tools.SvnUI.View"
             mc:Ignorable="d" d:DesignWidth="300" Height="25" x:Name="Root">
    <Grid Margin="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Property.Caption, ElementName=Root}" TextAlignment="Center" ToolTip="{Binding Property.Description, ElementName=Root}"/>
            <TextBlock Text="*" Foreground="Red" Visibility="{Binding Property.IsRequired, ElementName=Root, Converter={StaticResource BooleanToVisibilityConverter}}" VerticalAlignment="Top"/>
        </StackPanel>
        <CheckBox Grid.Column="1" IsChecked="{Binding Property.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=Root}" VerticalAlignment="Center" HorizontalAlignment="Center"></CheckBox>
    </Grid>
</UserControl>
